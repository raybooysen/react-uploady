{
  "version": "1.8.2",
  "command": {
    "version": {
      "allowBranch": "release-*"
    },
    "publish": {
      "ignoreChanges": [
        "**/tests/**",
        "**/*.test.js"
      ],
      "message": "chore: publish new version: %v"
    }
  },
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "npmClient": "pnpm"
}
